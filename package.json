{
  "name": "udemy-playwright-javascript-062125",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "playwright test && npm run ctrf:summary && npm run ai:bedrock",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed && npm run ctrf:summary && npm run ai:bedrock",
    "test:report": "playwright show-report",
    "test:only": "playwright test",
    "test:smoke": "playwright test --grep @smoke",
    "test:critical": "playwright test --grep @critical",
    "test:regression": "playwright test --grep @regression",
    "test:e2e": "playwright test --grep @e2e",
    "test:refactored": "playwright test tests/refactored-e2e.spec.ts",
    "test:env:staging": "TEST_ENV=staging playwright test",
    "test:env:development": "TEST_ENV=development playwright test",
    "test:summary": "node scripts/ctrf-summary.js",
    "ctrf:merge": "ctrf merge test-results/ctrf-report.json",
    "ctrf:summary": "ctrf summary test-results/ctrf-report.json",
    "ctrf:view": "ctrf view test-results/ctrf-report.json",
    "ai:report": "node scripts/ai-report.js",
    "ai:bedrock": "AI_PROVIDER=bedrock node scripts/ai-report.js",
    "ai:claude": "AI_PROVIDER=claude node scripts/ai-report.js",
    "ai:openai": "AI_PROVIDER=openai node scripts/ai-report.js",
    "ai:ollama": "AI_PROVIDER=ollama node scripts/ai-report.js",
    "test:ai": "playwright test && node scripts/ctrf-summary.js && node scripts/ai-report.js",
    "test:bedrock": "playwright test && node scripts/ctrf-summary.js && npm run ai:bedrock",
    "debug:bedrock": "node debug-bedrock.js",
    "debug:bedrock:full": "node debug-bedrock-enhanced.js",
    "debug:aws": "aws sts get-caller-identity && aws bedrock list-foundation-models --region us-west-2",
    "bedrock:cli": "node bedrock-cli.js",
    "bedrock:test": "node bedrock-cli.js quick",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "ai-ctrf": "node dist/index.js",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist test-results playwright-report",
    "prepare": "husky install",
    "pretest": "npm run build",
    "posttest": "npm run format:check"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@types/node": "^24.0.3",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "ctrf": "^0.0.12",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-playwright": "^0.15.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "playwright-ctrf-json-reporter": "^0.0.21",
    "prettier": "^3.1.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.2",
    "@aws-sdk/client-bedrock": "^3.844.0",
    "@aws-sdk/client-bedrock-runtime": "^3.844.0",
    "@aws-sdk/client-sts": "^3.844.0",
    "@google/generative-ai": "^0.21.0",
    "marked": "^16.0.0",
    "openai": "^4.57.0",
    "yargs": "^17.7.2"
  }
}
